<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linerm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E2FAE3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:gravity="right"
            android:text="Создана: 5.1.2020 10:36 "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="TextView"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_taskText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/_createdBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:text="Ответственный:"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="Button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/red"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:background="@drawable/button_item"
            android:text="Редактировать"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/closed"
            android:layout_width="120dp"
            android:layout_height="25dp"


            android:background="@drawable/button_item_red"
            android:text="Закрыть"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>