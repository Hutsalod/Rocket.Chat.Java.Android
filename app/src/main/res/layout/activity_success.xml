<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:background="#191919"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Начните бусплатный пробный период сейчас!" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Вы можете как принимать входящие звонки, так и совершать звонки"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="или продолжайте использовать органичевную версию"
        android:textColor="#AAAAAA"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="7 дне бесплатно, затем 3,99 $ / месяц"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <Button

        android:id="@+id/startSubscribe"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FF9500"
        android:onClick="onSubscribeButtonClicked"
        android:text="НАЧАТЬ СЕЙЧАС"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#AAAAAA"
        android:textColor="#FFFFFF"
        android:onClick="exit"
        android:layout_marginTop="20dp"
        android:text="Выйти из WeWe " />


</LinearLayout>